<table class="table">
  <thead class="thead" >
    <tr>
      <th align="center" ></th>
      <th align="center" ><%= DepName.find(1).dep %></th>
      <th align="center" ><%= DepName.find(2).dep %></th>
      <th align="center" ><%= DepName.find(3).dep %></th>
      <th align="center" ><%= DepName.find(4).dep %></th>
      <th align="center" ><%= DepName.find(5).dep %></th>
      <th align="center" >合計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>現在の管理対象者数</th>
      <td align="center"><%= @number_of_users_dep_1 %>人</td>
      <td align="center"><%= @number_of_users_dep_2 %>人</td>
      <td align="center"><%= @number_of_users_dep_3 %>人</td>
      <td align="center"><%= @number_of_users_dep_4 %>人</td>
      <td align="center"><%= @number_of_users_dep_5 %>人</td>
      <td align="center"><%= @number_of_users %>人</td>
    </tr>
    <tr>
      <th><%= Time.current.next_month.month %>月の部門別会社都合休業割合</th>
      <td align="center" ><%= @dobcc_ratio_in_total_next_month_per_dep_1 %> %</td>
      <td align="center" ><%= @dobcc_ratio_in_total_next_month_per_dep_2 %> %</td>
      <td align="center" ><%= @dobcc_ratio_in_total_next_month_per_dep_3 %> %</td>
      <td align="center" ><%= @dobcc_ratio_in_total_next_month_per_dep_4 %> %</td>
      <td align="center" ><%= @dobcc_ratio_in_total_next_month_per_dep_5 %> %</td>
      <td align="center" ><%= @dobcc_ratio_in_total_next_month %> %</td>
    </tr>
    <tr>
      <th><%= Time.current.next_month.month %>月の部門別出社率</th>
      <td align="center" ><%= @in_the_office_ratio_per_next_month_per_dep_1 %> %</td>
      <td align="center" ><%= @in_the_office_ratio_per_next_month_per_dep_2 %> %</td>
      <td align="center" ><%= @in_the_office_ratio_per_next_month_per_dep_3 %> %</td>
      <td align="center" ><%= @in_the_office_ratio_per_next_month_per_dep_4 %> %</td>
      <td align="center" ><%= @in_the_office_ratio_per_next_month_per_dep_5 %> %</td>
      <td align="center" ><%= @in_the_office_ratio_per_next_month_in_total %> %</td>
    </tr>
  </tbody>
</table>
<%= link_to "Excel出力",workschedules_path(format: :xlsx, type: 3),class:'btn btn-excel' %>
<table class="workschedule_table table table-hover" >
  <thead>
    <tr>
      <th style="width:10%">社員番号</th>
      <th style="width:25%">氏名</th>
      <th style="width:20%">部門名称</th>
      <th style="width:15%">出勤日</th>
      <th style="width:30%">勤務形態</th>
    </tr>
  </thead>
  <tbody>
  <% @ws_nextmonth.each do |f|  %>
    <tr>
      <td><%= User.find(f.user_id).idnum  %></td>
      <td><%= @users.find(f.user_id).name  %></td>
      <td><%= DepName.find(User.find(f.user_id).dep_name_id).dep  %></td>
      <td><%= f.wdate  %></td>
      <td><%= @statuses.find(f.status_id).status %></td>
    </tr>
  <% end %>
  </tbody>
</table>
