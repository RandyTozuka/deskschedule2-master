<h1>adminのページ</h1>
<h3><%= Time.current.next_month.month %>月の部門別会社都合休業割合</h3>
<table class="table">
  <thead class="thead-dark" >
    <tr>
      <th scope="coll" style="width:10%" ><%= DepName.find(1).dep %></th>
      <th scope="coll" style="width:10%" ><%= DepName.find(2).dep %></th>
      <th scope="coll" style="width:10%" ><%= DepName.find(3).dep %></th>
      <th scope="coll" style="width:10%" ><%= DepName.find(4).dep %></th>
      <th scope="coll" style="width:10%" ><%= DepName.find(5).dep %></th>
      <th scope="coll" style="width:10%" >合計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row" ><%= @dobcc_ratio_in_total_next_month_per_dep_1 %> %</td>
      <td scope="row" ><%= @dobcc_ratio_in_total_next_month_per_dep_2 %> %</td>
      <td scope="row" ><%= @dobcc_ratio_in_total_next_month_per_dep_3 %> %</td>
      <td scope="row" ><%= @dobcc_ratio_in_total_next_month_per_dep_4 %> %</td>
      <td scope="row" ><%= @dobcc_ratio_in_total_next_month_per_dep_5 %> %</td>
      <td scope="row" ><%= @dobcc_ratio_in_total_next_month %> %</td>
    </tr>
  </tbody>
</table>
<div class="admin-top">
  <div class="item">現在の管理対象者数 <%= @number_of_users %>人 </div>
  <div class="item">|</div>
  <div class="item"><%= Time.current.next_month.month %>月の稼働日数 <%= @bd_nextmonth %>日</div>
</div>
<%= link_to "Excel出力",workschedules_path(format: :xlsx, type: 3),class:'btn btn-excel' %>
<table class="workschedule_table table table-hover" >
  <thead>
    <tr>
      <th style="width:10%">社員番号</th>
      <th style="width:25%">email</th>
      <th style="width:20%">部門名称</th>
      <th style="width:15%">出勤日</th>
      <th style="width:30%">勤務形態</th>
    </tr>
  </thead>
  <tbody>
  <% @ws_nextmonth.each do |f|  %>
    <tr>
      <td><%= User.find(f.user_id).idnum  %></td>
      <td><%= @users.find(f.user_id).email  %></td>
      <td><%= DepName.find(User.find(f.user_id).dep_name_id).dep  %></td>
      <td><%= f.wdate  %></td>
      <td><%= @statuses.find(f.status_id).status %></td>
    </tr>
  <% end %>
  </tbody>
</table>
