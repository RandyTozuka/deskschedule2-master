wb = xlsx_package.workbook
wb.add_worksheet(name: "output") do |sheet|
  sheet.add_row ["No.", "日付", "ステータス" ]
    @ws_thismonth.each_with_index do |ws, i|
      sheet.add_row [i,
                     ws.wdate.strftime("%Y年%m月%d日(#{@week_days[ws.wdate.wday]})"),
                     ws.status_id ]
  end
end
